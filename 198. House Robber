static int fastio=[](){
    std::ios::sync_with_stdio(false);
    cin.tie(NULL);
    return 0;
}();
class Solution {
public:
    int rob(vector<int>& nums) {
        // int odd_sum=0;
        // int even_sum=0;
        // for(int i=0;i<nums.size();i++){
        //     if(i%2==0)
        //         even_sum+=nums[i];
        //     else
        //         odd_sum+=nums[i];
        // }
        // return max(odd_sum,even_sum);
        if(nums.size()==0)
            return 0;
        if(nums.size()==1)
            return nums[0];
         if(nums.size()==2)
            return max(nums[0],nums[1]);
         if(nums.size()==3)
            return max(nums[1],nums[0]+nums[2]);
        
        
        int sum[nums.size()];
        sum[0]=nums[0];
        sum[1]=max(nums[0],nums[1]);
        sum[2]=max(nums[1],nums[0]+nums[2]);
        int ans=max(sum[0],max(sum[1],sum[2]));
        
        for(int i=3;i<nums.size();i++){
            sum[i]=nums[i]+max(sum[i-2],sum[i-3]);
            ans=max(ans,sum[i]);
        }
        
        return ans;
        
    }
};
